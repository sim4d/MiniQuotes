/* solaris.wxss */
.container {
  width: 100vw;
  height: 100vh;
  padding: 0;
  margin: 0;
  background-color: #000000;
  position: relative;
  overflow: hidden;
}

.canvas {
  width: 100%;
  height: 100%;
  display: block;
  background-color: #000000;
  position: absolute;
  top: 0;
  left: 0;
}

.canvas-2d {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}

.debug-info {
  position: absolute;
  top: 10px;
  left: 10px;
  padding: 5px 10px;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 12px;
  border-radius: 4px;
  z-index: 1000;
}

page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background-color: #000000;
}