.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8fafc;
}

/* About内容区域 */
.about-section {
  flex: 1;
  padding: 20px;
}

.about-card {
  background-color: white;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
  display: block;
}

.content {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}

.copyright {
  font-size: 14px;
  font-weight: bold;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
}

/* 广告区域 */
.ad-section {
  height: 120px;
  padding: 10px 20px;
  background-color: white;
  border-top: 1px solid #eee;
}

.ad-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8px;
}

.ad-image {
  width: 100%;
  height: 80px;
  border-radius: 6px;
}

.ad-text {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.ad-loading {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8px;
  color: #999;
  font-size: 14px;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 400px;
  background-color: white;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  z-index: 1001;
  padding: 20px;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.reference-item {
  display: block;
  font-size: 14px;
  color: #337ab7;
  line-height: 1.8;
  margin-bottom: 8px;
  padding: 4px 8px;
  border-radius: 4px;
  transition: background-color 0.2s ease;
}

.reference-item:active {
  background-color: #e2e8f0;
}

.close-btn {
  margin-top: 20px;
  background-color: #667eea;
  color: white;
  border: none;
  border-radius: 8px;
}