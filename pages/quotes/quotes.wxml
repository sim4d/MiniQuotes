<!--quotes.wxml-->
<view class="page-container">
  <view class="quote-container">
    <view class="quote-card">
      <view class="quote-marks">"</view>
      <text class="quote-text" bindtap="refreshQuote">{{currentQuote}}</text>
      <text class="quote-author">{{quotesAuthor}}</text>
    </view>
  </view>

  <view class="action-container">
    <view class="action-button refresh-button" bindtap="refreshQuote">
      <text>换一句</text>
    </view>
    <view class="action-button copy-button" bindtap="copyQuote">
      <text>复制</text>
    </view>
    <button class="action-button share-button" open-type="share">
      <text>分享</text>
    </button>
  </view>
</view>