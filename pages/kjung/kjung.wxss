/* pages/kjung/kjung.wxss */
page {
  background-color: #f7fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  overflow-x: hidden;
  width: 100%;
}

.container {
  min-height: 100vh;
  width: 100%;
  overflow-x: hidden;
}

.header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.header::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: -10rpx;
  height: 20rpx;
  background: linear-gradient(90deg, #eaeaf7, #f0f4fd, #eaeaf7);
  border-radius: 50%;
  opacity: 0.8;
}

.title {
  display: block;
  font-size: 42rpx;
  font-weight: 600;
  color: #2c5282;
  margin-bottom: 10rpx;
  letter-spacing: 1px;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #718096;
  font-weight: 400;
  letter-spacing: 1px;
}

.content {
  padding: 0 15px 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c5282;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: block;
  width: 8rpx;
  height: 34rpx;
  background: #5a67d8;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.section-content {
  line-height: 1.7;
}

.card-light {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
  transition: transform 0.2s, box-shadow 0.2s;
}

.card-light:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}

.paragraph {
  display: block;
  font-size: 32rpx;
  color: #4a5568;
  margin-bottom: 24rpx;
  margin-left: 10px;
  margin-right: 10px;
  line-height: 1.7;
  text-align: justify;
}

.text-center {
  text-align: center;
}

.tags-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin: 24rpx 0;
}

.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin: 8rpx;
  transition: transform 0.1s ease;
}

.tag:active {
  transform: scale(0.96);
}

.tag-amber {
  background-color: #fffaf0;
  color: #dd6b20;
  border: 1rpx solid rgba(221, 107, 32, 0.2);
}

.tag-sky {
  background-color: #ebf8ff;
  color: #2b6cb0;
  border: 1rpx solid rgba(43, 108, 176, 0.2);
}

.tag-rose {
  background-color: #fff5f7;
  color: #b83280;
  border: 1rpx solid rgba(184, 50, 128, 0.2);
}

.divider {
  border-top: 1rpx solid #edf2f7;
  padding-top: 24rpx;
  margin-top: 8rpx;
}

.projection-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 36rpx 0;
}

.projection-item {
  text-align: center;
  padding: 16rpx;
  width: 45%;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
}

.emoji {
  font-size: 56rpx;
  margin-bottom: 16rpx;
  display: inline-block;
}

.arrow {
  font-size: 32rpx;
  margin: 10rpx 0;
  color: #a0aec0;
  display: block;
}

.arrow-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 10%;
}

.arrow-horizontal {
  font-size: 32rpx;
  color: #a0aec0;
  transform: scaleY(1.5);
}

.label {
  font-weight: 600;
  font-size: 26rpx;
  color: #4a5568;
  margin-top: 10rpx;
}

.sublabel {
  font-size: 22rpx;
  color: #a0aec0;
  margin-top: 4rpx;
}

.pillar {
  position: relative;
  padding-left: 14rpx;
  padding-right: 14rpx;
}

.pillar::before {
  content: '';
  position: absolute;
  left: 28rpx;
  top: 42rpx;
  bottom: 20rpx;
  width: 1rpx;
  background: linear-gradient(to bottom, #5a67d8 30%, rgba(90, 103, 216, 0.1));
  z-index: 1;
}

.pillar-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 2;
}

.pillar-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
}

.blue {
  background-color: #4c51bf;
}

.purple {
  background-color: #805ad5;
}

.teal {
  background-color: #38b2ac;
}

.pillar-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3748;
}

.list {
  padding-left: 76rpx;
  margin-top: 20rpx;
}

.list-item {
  display: block;
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #4a5568;
}

.list-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #4c51bf;
  border-radius: 50%;
}

.bold {
  font-weight: 600;
  color: #2d3748;
}

.subsections {
  margin-top: 24rpx;
  padding-left: 60rpx;
}

.subsection {
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.subsection::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  bottom: 10rpx;
  width: 3rpx;
  background-color: #e2e8f0;
}

.subsection-title {
  font-weight: 600;
  font-size: 28rpx;
  color: #2d3748;
  margin-bottom: 8rpx;
  display: block;
}

.small {
  font-size: 26rpx;
  line-height: 1.6;
}

.quote-container {
  background-color: #f8fafc;
  padding: 32rpx;
  border-radius: 16rpx;
  margin: 30rpx 0;
  position: relative;
  border-left: 4rpx solid #5a67d8;
}

.quote-container::before {
  content: '"';
  position: absolute;
  left: 20rpx;
  top: 10rpx;
  font-size: 80rpx;
  color: #e2e8f0;
  font-family: Georgia, serif;
  line-height: 1;
}

.quote {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #4a5568;
  margin-bottom: 16rpx;
  text-align: center;
  font-style: italic;
  line-height: 1.6;
  padding: 0 30rpx;
}

.quote-author {
  display: block;
  font-size: 24rpx;
  color: #718096;
  text-align: right;
  font-weight: 500;
}

.ending {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #38b2ac;
  text-align: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #edf2f7;
  line-height: 1.6;
}

/* 参考资料样式 */
.references-section {
  margin-top: 30rpx;
  margin-bottom: 60rpx;
}

.reference-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  background-color: #f8fafc;
  border-radius: 10rpx;
  margin: 10rpx 0;
  transition: all 0.2s ease;
}

.reference-item:active {
  background-color: #e6f0f9;
  transform: translateY(2rpx);
}

.reference-link {
  font-size: 26rpx;
  color: #4c51bf;
  font-weight: 500;
}

.reference-copy-hint {
  font-size: 22rpx;
  color: #a0aec0;
  margin-left: 10rpx;
}