/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 增大tabBar文字大小 */
.wx-tab-bar-item .wx-tab-bar-title {
  font-size: 16px !important; /* 增大字体大小 */
  line-height: 1.2 !important; /* 调整行高 */
  transform: scale(1.3); /* 使用缩放来增大文字 */
  transform-origin: center center;
}